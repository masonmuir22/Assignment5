@model Books

    <div class="card card-outline-primary m-1 p-1">

        <div class="bg-dark text-info">
            <h2>@Model.Title</h2>
            <h3>@Model.AuthorFirst @Model.AuthorMiddle @Model.AuthorLast</h3>
            <p>@Model.Publisher</p>
            <p>@Model.ISBN</p>
            <p>@Model.Class</p>
            <p>@Model.Category</p>
            <p class="list-group-item-dark">@Model.Price</p>
            <p>@Model.NumPages</p>
        </div>

        <form id="@Model.BookID" asp-page="/Cart" method="post">
            <input type="hidden" asp-for="BookID" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                    Add to Cart 
                </button>
            </span>
        </form>

    </div>